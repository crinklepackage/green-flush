{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "rootDirectory": "packages/server/worker",
    "nixpacks": {
      "setup": {
        "cmds": [
          "cd ../../"
        ]
      },
      "install": {
        "cmds": [
          "yarn install"
        ],
        "cache": false
      },
      "build": {
        "cmds": [
          "cd ../shared && node prebuild.js", 
          "cd ../server/worker && tsc --skipLibCheck || (echo 'Using Babel fallback' && npx babel src --extensions '.ts,.js' --out-dir dist --copy-files)"
        ]
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "node dist/index.js"
  }
} 